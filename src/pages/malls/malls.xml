<view class="section filter">
    <view class="filter-item" id="choose-location" bindtap="chooseLocation">
      <i class="fa fa-map-marker"></i>{{selectedCity.title}}
    </view>
    <!--<view class="filter-item" id="auto-location">
      
    </view>-->
</view> 
<scroll-view class="my-scroll bis-list" scroll-y="true"  style="margin-top:0; height: {{scrollHeight}}px;" bindscrolltolower="loadMore">
    <view class="bis-list-item" wx:key="{{item.mall_id}}" wx:for="{{mallList}}"  wx:for-index="index">
        <view class="des">
            <p class="title">{{item.mall_name}}</p>
            <p class="category">{{item.category}}</p>
            <p class="location">
                <i class="fa fa-map-marker"></i>
                <span class="location-info">{{item.adddress}}</span>
            </p>
        </view>
        <view class="mall-list-control">
          <view class="mall-list-control-item" data-lng="{{item.lng}}" data-lat="{{item.lat}}" bindtap="gotoMap">
            <i class="fa fa-map-o"></i> 我要去
          </view>
          <view class="mall-list-control-item" data-id="{{item.mall_id}}" bindtap="gotoDetail">
            <i class="fa fa-file-text-o"></i> 详情
          </view>
        </view>
    </view>
    <view class="loadMore" wx:if="{{isLoading}}">
      正在加载...
    </view>
</scroll-view>

