{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "outDir": "./.tmp",
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "lib": [
            "es2015",
            "dom",
            "es5"
        ]
    },
    "include": [
        "./src",
        "./typings"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compileOnSave": true,
    "atom": {
        "rewriteTsconfig": false,
        "formatOnSave": true
    }
}
